@model Internet_shop.Models.Human
@{
    ViewData["Title"] = "Добачить человечка";
}
@section Footer {
    Добавление человека
}
<h2>CreateHuman</h2>
<form asp-action="CreateHuman" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Ім'я</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mail" class="control-label">Пошта</label>
        <input type="text" asp-for="Mail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>

